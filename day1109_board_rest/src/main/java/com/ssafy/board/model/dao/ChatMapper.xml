<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.board.model.dao.ChatMapper">
    <select id="selectRoomList">
        select * from chatroom    
    </select>
    
    <select id="selectRoomOne" parameterType="String">
        select * from chatroom
        where roomId = #{id}
    </select>
    
    <insert id="insertRoom" parameterType="com.ssafy.board.model.dto.ChatRoomDTO">
        insert into chatroom(roomId,name)
        values(#{roomId},#{name})
    </insert>
    
    <insert id="insertMessage" parameterType="com.ssafy.board.model.dto.ChatMessageDTO">
        insert into chatmessage(roomId,writer,message)
        values(#{roomId},#{writer},#{message})
    </insert>
</mapper>